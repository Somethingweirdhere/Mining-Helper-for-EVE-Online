<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.devfleet.android.minerhelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.devfleet.android.minerhelper.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.Ice"
            android:label="Ice"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.Gasactivity"
            android:label="Gas"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.SystemC"
            android:label="@string/SystemCtext"
            android:launchMode="singleTop"
            android:parentActivityName="org.devfleet.android.minerhelper.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.devfleet.android.minerhelper.MainActivity" />
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.SystemCice"
            android:label="@string/SystemCtext"
            android:parentActivityName="org.devfleet.android.minerhelper.Ice">
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.SystemCgas"
            android:parentActivityName="org.devfleet.android.minerhelper.Gasactivity">
            android:label="@string/SystemCtext"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.OreC"
            android:label="@string/OreCtext"
            android:launchMode="singleTop"
            android:parentActivityName="org.devfleet.android.minerhelper.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.devfleet.android.minerhelper.MainActivity" />
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.OreCice"
            android:label="Select ice"
            android:parentActivityName="org.devfleet.android.minerhelper.Ice">
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.OreCgas"
            android:label="Select gas"
            android:parentActivityName="org.devfleet.android.minerhelper.Gasactivity">
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="org.devfleet.android.minerhelper.About"
            android:label="@string/AboutText"
            android:launchMode="singleTop"
            android:parentActivityName="org.devfleet.android.minerhelper.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.devfleet.android.minerhelper.MainActivity" />
        </activity>
    </application>

</manifest>